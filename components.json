import React from "react";

/**
 * Stylized Sun SVG used by the Solstice hero.
 * Uses the same palette from the images and provides a subtle glossy highlight.
 */
export default function SunIcon({
  size = 560,
  className = "",
  ariaLabel = "Solstice sun",
}: {
  size?: number;
  className?: string;
  ariaLabel?: string;
}) {
  const id = "solsticeGradient";
  return (
    <svg
      className={className}
      width={size}
      height={size}
      viewBox="0 0 600 600"
      role="img"
      aria-label={ariaLabel}
      xmlns="http://www.w3.org/2000/svg"
    >
      <defs>
        <radialGradient id={id} cx="35%" cy="25%" r="80%">
          <stop offset="0%" stopColor="#FFEB3B" />
          <stop offset="35%" stopColor="#FFD700" />
          <stop offset="65%" stopColor="#FFA500" />
          <stop offset="100%" stopColor="#FF8C00" />
        </radialGradient>

        {/* subtle texture to give a tactile finish */}
        <filter id="grain" x="-10%" y="-10%" width="120%" height="120%">
          <feTurbulence baseFrequency="0.8" numOctaves="2" stitchTiles="stitch" result="t" />
          <feColorMatrix type="saturate" values="0" />
          <feBlend in="SourceGraphic" in2="t" mode="overlay" />
        </filter>
      </defs>

      {/* large circular sun */}
      <g filter="url(#grain)">
        <circle cx="300" cy="300" r="280" fill={`url(#${id})`} />
      </g>

      {/* thin inner glow to add depth */}
      <circle cx="300" cy="300" r="235" fill="none" stroke="rgba(255,255,255,0.06)" strokeWidth="80" />

      {/* highlight gloss */}
      <ellipse cx="220" cy="180" rx="140" ry="90" fill="rgba(255,255,255,0.12)" />
    </svg>
  );
}


